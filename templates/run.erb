#!/bin/bash
CMD="java -jar <%= scope.lookupvar('graylog2server::serverpath') %>/graylog2-server.jar"
OPTIONS="-f <%= scope.lookupvar('graylog2server::serverpath') %>/etc/graylog2.conf"

exec chpst -u <%= scope.lookupvar('graylog2server::user') %>:<%= scope.lookupvar('graylog2server::user') %> $CMD $OPTIONS 2>&1
